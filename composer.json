{
    "name": "acnologiaslayer/mautic-email-threads-plugin",
    "description": "Email threading plugin for Mautic that displays email conversations as threads",
    "type": "mautic-plugin",
    "keywords": ["mautic", "email", "threading", "conversations", "plugin"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mahir",
            "email": "arc.mahir@gmail.com",
            "homepage": "https://github.com/acnologiaslayer"
        }
    ],
    "require": {
        "php": ">=8.4",
        "mautic/core-bundle": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "symfony/phpunit-bridge": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "MauticPlugin\\MauticEmailThreadsBundle\\": ""
        }
    },
    "extra": {
        "mautic-plugin": {
            "name": "MauticEmailThreadsBundle",
            "author": "Mahir",
            "description": "Email threading plugin for Mautic"
        }
    },
    "minimum-stability": "stable"
}
