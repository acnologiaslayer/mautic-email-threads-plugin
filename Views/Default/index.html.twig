{% extends '@MauticCore/Default/content.html.twig' %}

{% set mauticContent = 'emailthreads' %}

{% block headerTitle %}{{ 'mautic.emailthreads.threads'|trans }}{% endblock %}

{% block actions %}
    <div class="btn-group">
        <a href="{{ path('mautic_emailthreads_config') }}" class="btn btn-default">
            <i class="fa fa-cog"></i>
            {{ 'mautic.core.settings'|trans }}
        </a>
    </div>
{% endblock %}

{% block content %}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'mautic.emailthreads.threads.list'|trans }}</h3>
    </div>
    <div class="panel-body">
        {% if threads is empty %}
            <p class="text-muted">{{ 'mautic.emailthreads.no_threads'|trans }}</p>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>{{ 'mautic.emailthreads.thread.subject'|trans }}</th>
                            <th>{{ 'mautic.emailthreads.thread.lead'|trans }}</th>
                            <th>{{ 'mautic.emailthreads.thread.messages'|trans }}</th>
                            <th>{{ 'mautic.emailthreads.thread.last_message'|trans }}</th>
                            <th>{{ 'mautic.core.actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for thread in threads %}
                            <tr>
                                <td>
                                    <a href="{{ path('mautic_emailthreads_view', {'id': thread.id}) }}">
                                        {{ thread.subject }}
                                    </a>
                                </td>
                                <td>
                                    {% if thread.lead %}
                                        {{ thread.lead.name ?: thread.lead.email }}
                                    {% else %}
                                        <em>{{ 'mautic.emailthreads.unknown_lead'|trans }}</em>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge">{{ thread.messageCount }}</span>
                                </td>
                                <td>
                                    {{ thread.lastMessageDate|date('Y-m-d H:i') }}
                                </td>
                                <td>
                                    <a href="{{ path('mautic_emailthreads_view', {'id': thread.id}) }}" 
                                       class="btn btn-xs btn-default">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a href="{{ path('mautic_emailthreads_public', {'threadId': thread.threadId}) }}" 
                                       class="btn btn-xs btn-primary" target="_blank">
                                        <i class="fa fa-external-link"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
